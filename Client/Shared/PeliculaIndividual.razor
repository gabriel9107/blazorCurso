@* <h3>Pelicula Individual</h3> *@
<div>
    <p> Titulo : @((MarkupString)pelicula.Titulo)</p>
    @if (DateTime.Today.Subtract(pelicula.FechaLanzamiento).Days <= 5)
    {
        <span style="color:red">(!NUEVO!)</span>

    }
    <p>Fecha Lanzamiento: <b>@pelicula.FechaLanzamiento.ToString("dd mm yyyy")</b></p>
    <div>
        <button @onclick="Eliminar">Borrar</button>
    </div>

</div>


@code {
    [Parameter]
    [EditorRequired]
    public Pelicula pelicula { get; set; } = null!;

    [Parameter]
    public bool MostrarBotones { get; set; } = false;
    
    
    void Eliminar()
    {
        Console.WriteLine($"Eliminando la peliculas ");
    }
}
